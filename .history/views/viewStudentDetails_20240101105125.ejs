<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Search</title>
    <link rel="stylesheet" href="/your-path-to-css-file.css">
</head>
<body>

  <div class="dashboard-container">
    <div class="top-bar">
      <h1>STUDENT CERTIFICATE DETAILS</h1>
    </div>

    <form class="search-container" id="searchForm">
      <label for="roll-number-search">Search by Roll Number:</label>
      <input type="text" name="roll_number" id="roll-number-search" placeholder="Enter Roll Number">
      <button type="button" id="searchButton">Search</button>
    </form>

    <div id="resultContainer" style="display: none;">
      <div class="student-info" id="studentInfo">
        <!-- Student details will be displayed here -->
      </div>

      <h2>Certificates:</h2>
      <ul id="certificatesList">
        <!-- Certificates will be displayed here -->
      </ul>
    </div>

    <div id="noRecords" style="display: none;">
      <p>No student details found for the provided roll number.</p>
    </div>

  </div>

  <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
  <script>
    $(document).ready(function () {
      $('#searchForm').submit(function (event) {
        event.preventDefault(); // Prevent the default form submission behavior
  
        // Get roll number from the input
        const rollNumber = $('#roll-number-search').val();
  
        // Send a POST request to the server
        $.post('/admin_Dashboard/viewStudentDetails', { roll_number: rollNumber })
          .done(function (data) {
            // Display the result container
            $('#resultContainer').show();
  
            if (data && data.student.length > 0) {
              // Display student details for the first student
              const student = data.student[0]; // Change from students to student
              $('#studentInfo').html('<p><strong>Roll Number:</strong> ' + student.roll_number + '</p>');
  
              // Display certificates
              const certificatesList = $('#certificatesList');
              certificatesList.empty();
  
              if (student.certificates && student.certificates.length > 0) {
                student.certificates.forEach(function (certificate) {
                    certificatesList.append('<li><strong>Certificate ID:</strong> ' + certificate + '</li>'); // Change certificate.certificate_id to certificate
                });
                } else {
                    certificatesList.append('<p>No certificates found for this student.</p>');
                }
            
            } else {
              // If no records found, display a message
              $('#noRecords').show();
            }
          })
          .fail(function (error) {
            console.error('Error:', error.responseText);
          });
      });
    });
  </script>

</body>
</html>
