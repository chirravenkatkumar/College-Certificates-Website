<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upload History</title>
    <link rel="stylesheet" href="/styles/history.css">
</head>
<body>
    <div class="container">
        <h1>Upload History</h1>
        <% if (history.length > 0) { %>
            <table class="upload-table">
                <thead>
                    <tr>
                        <th>Actions</th>
                        <th>Date & Time</th>
                    </tr>
                </thead>
                <tbody>
                    <% history.forEach(item => { %>
                        <tr>
                            <td class="actions">
                                <form action="/viewFile" method="post" target="_blank" class="action-form">
                                    <input type="hidden" name="filePath" value="<%= item.Pdf_path %>">
                                    <button type="submit" class="action-button">View PDF</button>
                                </form>
                                <form action="/downloadFile" method="post" class="action-form">
                                    <input type="hidden" name="filePath" value="<%= item.Pdf_path %>">
                                    <button type="submit" class="action-button">Download PDF</button>
                                </form>
                                <form action="/viewFile" method="post" target="_blank" class="action-form">
                                    <input type="hidden" name="filePath" value="<%= item.xlsx_path %>">
                                    <button type="submit" class="action-button">View XLSX</button>
                                </form>
                                <form action="/downloadFile" method="post" class="action-form">
                                    <input type="hidden" name="filePath" value="<%= item.xlsx_path %>">
                                    <button type="submit" class="action-button">Download XLSX</button>
                                </form>
                            </td>
                            <td><%= new Date(item.timestamp).toLocaleString() %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p>No upload history available.</p>
        <% } %>
    </div>
</body>
</html>
