<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ViewStudentInfo</title>
    <link rel="stylesheet" href="/your-path-to-css-file.css">
</head>
<body>

  <div class="dashboard-container">
    <div class="top-bar">
      <h1>STUDENT CERTIFICATE DETAILS</h1>
    </div>

    <form class="search-container" action="/admin_Dashboard/viewStudentDetails" method="post">
      <label for="roll-number-search">Search by Roll Number:</label>
      <input type="text" name="roll_number" id="roll-number-search" placeholder="Enter Roll Number">
      <button type="submit">Search</button>
    </form>

    <% if (typeof studentDetails !== 'undefined') { %>
        <div class="student-info">
            <p><strong>Roll Number:</strong> <%= studentDetails.roll_number %></p>
            <!-- Display other relevant student details -->
        </div>

        <h2>Certificates:</h2>
        <% if (studentDetails.certificates && studentDetails.certificates.length > 0) { %>
            <ul>
                <% for (let certificate of studentDetails.certificates) { %>
                    <li>
                        <p><strong>Certificate ID:</strong> <%= certificate.certificate_id %></p>
                        <!-- Display other relevant certificate details -->
                    </li>
                <% } %>
            </ul>
        <% } else { %>
            <p>No certificates found for this student.</p>
        <% } %>

    <% } else if (searched) { %>
        <p>No student details found for the provided roll number.</p>
    <% } %>

  </div>

</body>
</html>
